//1: Imprimindo números em ordem crescente
print("1: Imprimindo números em ordem crescente")
for i in range(1, 51):
    print(i, end=" ")
print("\n")  # Quebra de linha para separar as saídas

//2: Imprimindo números em ordem decrescente
print("2: Imprimindo números em ordem decrescente")
for i in range(50, 0, -1):
    print(i, end=" ")
print("\n")

//3: Imprimindo números excluindo múltiplos de 5
print("3: Imprimindo números excluindo múltiplos de 5")
for i in range(1, 51):
    if i % 5 != 0:
        print(i, end=" ")
print("\n")

//4: Adicionando números em um intervalo

print("4: Somando todos os números de 1 a 500")
soma = 0
for i in range(1, 501):
    soma += i
print("A soma de 1 a 500 é:", soma)
print("\n")

//5: Imprimindo uma escada de caracteres de libra

print("5: Imprimindo uma escada de caracteres de libra")
n = int(input("Digite o valor de n para a escada: "))
for i in range(1, n + 1):
    print("#" * i)
